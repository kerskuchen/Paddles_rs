{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "run",
            "command": "cargo",
            "args": [
                "run",
                "-p",
                "game_runtime"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "dependsOn": [
                "Rust: cargo build",
            ]
        },
        {
            "type": "shell",
            "label": "watch",
            "command": "cargo",
            "args": [
                "watch",
                "-d",
                "0.0",
                "-x",
                "build -p game_lib -p game_interface_glue",
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "label": "make dll",
            "command": "cargo",
            "args": [
                "build",
                "-p",
                "game_lib",
                "-p",
                "game_interface_glue",
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "label": "cargo doc",
            "command": "cargo",
            "args": [
                "doc",
                "--no-deps",
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
    ]
}