{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "run",
            "command": "cargo",
            "args": [
                "run",
                "-p",
                "game_runtime"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "label": "watch",
            "command": "cargo",
            "args": [
                "watch",
                "-x",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/game_lib"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "label": "build lib",
            "command": "cargo",
            "args": [
                "build",
            ],
            "options": {
                "cwd": "${workspaceFolder}/game_lib"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
    ]
}